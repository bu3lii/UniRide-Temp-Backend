# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/uniride
MONGODB_URI_TEST=mongodb://localhost:27017/uniride_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Email Configuration (for AUBH verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=UniRide <noreply@uniride.com>

# University Email Domain (for validation)
UNIVERSITY_EMAIL_DOMAIN=aubh.edu.bh

# Google Perspective API (for content moderation)
PERSPECTIVE_API_KEY=your_perspective_api_key

# Two-Factor Authentication
TWO_FA_APP_NAME=UniRide

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OpenStreetMap / OSRM Configuration
OSRM_SERVER_URL=https://router.project-osrm.org
NOMINATIM_URL=https://nominatim.openstreetmap.org

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:5173

# ============================================
# PAYMENT CONFIGURATION (NEW)
# ============================================

# Platform fee percentage (taken from each ride payment)
PLATFORM_FEE_PERCENTAGE=10

# Minimum wallet balance to book rides (0 = no minimum)
MINIMUM_WALLET_BALANCE=0

# Wallet top-up limits
MAX_TOPUP_AMOUNT=500
MIN_WITHDRAWAL_AMOUNT=5
MAX_WITHDRAWAL_AMOUNT=1000

# Driver payout delay (hours to wait before funds are available)
DRIVER_PAYOUT_DELAY_HOURS=0

# Refund window (hours after cancellation where refund is automatic)
REFUND_WINDOW_HOURS=24

# Payment Gateway (for production - Stripe example)
PAYMENT_GATEWAY_PROVIDER=stripe
PAYMENT_GATEWAY_API_KEY=pk_test_your_stripe_publishable_key
PAYMENT_GATEWAY_SECRET_KEY=sk_test_your_stripe_secret_key
PAYMENT_GATEWAY_WEBHOOK_SECRET=whsec_your_webhook_secret
